{
  "name": "rtk-slice-manager",
  "version": "0.0.1",
  "description": "Wrap over slice from @reduxjs/toolkit for automatic generation of actions and isolation of effect logic after changing the state of the fields",
  "main": "index.js",
  "typings": "./index.d.ts",
  "maintainers": [
    {
      "name": "Dmitry Osincev"
    }
  ],
  "scripts": {
    "clean": "rm -rf *.ts && rm -rf *.tsx && rm -rf *.js",
    "build": "tsc -b",
    "linter": "tslint -c tslint.json 'src/**/*.ts' --fix",
    "prepublish": "npm run build && npm run test",
    "postpublish": "npm run clean",
    "test": "jest",
    "test:info": "jest --coverage",
    "pretty": "pretty-quick --staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Dvachee/SliceManager.git"
  },
  "keywords": [
    "rtk",
    "slice",
    "manager",
    "effects",
    "watcher"
  ],
  "author": "Dmitry Osincev",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Dvachee/SliceManager/issues"
  },
  "homepage": "https://github.com/Dvachee/SliceManager#readme",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "verbose": true
  },
  "peerDependencies": {
    "redux": "4.1.2",
    "redux-thunk": "2.4.1",
    "@reduxjs/toolkit": "1.6.2"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "25.2.3",
    "@types/node": "14.0.6",
    "install-peers": "1.0.3",
    "jest": "26.0.1",
    "ts-jest": "26.0.0",
    "tslint": "5.20.1",
    "typescript": "4.5.2",
    "husky": "4.2.5",
    "prettier": "2.0.5",
    "pretty-quick": "2.0.1"
  }
}
