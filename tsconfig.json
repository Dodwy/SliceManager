{
    "compilerOptions": {
       "typeRoots": ["src/declarations", "node_modules/@types"],
       "noImplicitAny": true,
       "allowSyntheticDefaultImports": true,
       "sourceMap": false,
       "target": "es6",
       "jsx": "react",
       "module": "commonjs",
       "moduleResolution": "node",
       "experimentalDecorators": true,
       "declaration": true,
       "removeComments": false,
       "noImplicitReturns": true,
       "noUnusedLocals": true,
       "strict": true,
       "outDir": "./dist",
       "baseUrl": "src",
       "strictNullChecks": true,
       "allowJs": false,
       "inlineSourceMap": false,
       "lib": ["es6", "dom", "esnext"],
       "skipLibCheck": true,
       "esModuleInterop": true,
       "forceConsistentCasingInFileNames": true,
       "resolveJsonModule": true,
       "isolatedModules": false,
       "noEmit": false
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "src/utils.ts"]
 }